<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Admin.AProblem">
    <top>
        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="TOP_LEFT">
                    <children>
                        <Button fx:id="backButton" text="Quay lại" onAction="#handleBackButton">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </HBox>
                <Label text="QUẢN LÝ SỰ CỐ" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="20.0">
            <children>
                <!-- Form nhập liệu -->
                <VBox spacing="15.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 20;">
                    <children>
                        <Label text="Thông tin sự cố" style="-fx-font-weight: bold; -fx-font-size: 16px;" />

                        <GridPane hgap="15.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="80.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="ID Sự cố:" />
                                <TextField fx:id="suCoIdTextField" GridPane.columnIndex="1" />

                                <Label text="Thẻ xe:" GridPane.columnIndex="2" />
                                <ComboBox fx:id="theComboBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="3" />

                                <Label text="Nhân viên:" GridPane.rowIndex="1" />
                                <ComboBox fx:id="nhanVienComboBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Ngày:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                <DatePicker fx:id="ngayPicker" maxWidth="1.7976931348623157E308" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                                <Label text="Giờ (HH:mm):" GridPane.rowIndex="2" />
                                <TextField fx:id="gioTextField" promptText="VD: 14:30" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Mô tả sự cố:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                <TextArea fx:id="moTaTextArea" promptText="Nhập mô tả chi tiết về sự cố..."
                                          wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>

                        <!-- Buttons -->
                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button fx:id="themButton" onAction="#handleThemSuCo"
                                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                                        text="Thêm sự cố" />
                                <Button fx:id="suaButton" onAction="#handleSuaSuCo"
                                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                                        text="Sửa sự cố" />
                                <Button fx:id="xoaButton" onAction="#handleXoaSuCo"
                                        style="-fx-background-color: #f44336; -fx-text-fill: white;"
                                        text="Đã xử lý" />
                                <Button fx:id="lamMoiButton" onAction="#handleLamMoi"
                                        style="-fx-background-color: #FF9800; -fx-text-fill: white;"
                                        text="Làm mới" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Bảng hiển thị -->
                <VBox spacing="10.0">
                    <children>
                        <Label text="Danh sách sự cố" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                        <TableView fx:id="suCoTable" maxHeight="400.0">
                            <columns>
                                <TableColumn fx:id="colSuCoId" prefWidth="80.0" text="ID" />
                                <TableColumn fx:id="colBienSoXe" prefWidth="120.0" text="Biển số xe" />
                                <TableColumn fx:id="colNhanVien" prefWidth="150.0" text="Nhân viên" />
                                <TableColumn fx:id="colNgayGio" prefWidth="130.0" text="Ngày giờ" />
                                <TableColumn fx:id="colMoTa" prefWidth="300.0" text="Mô tả sự cố" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>